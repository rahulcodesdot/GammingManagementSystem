@model GammingManagementSystem.Dtos.PlayerDto

@{
    ViewData["Title"] = "PlayerRegistration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Success"] != null)
{
    <script type="text/javascript">
        alert("@TempData["Success"].ToString()");
    </script>
}

@if (TempData["Error"] != null)
{
    <script type="text/javascript">
        alert("@TempData["Error"].ToString()");
    </script>
}

<div class="row">
    <div class="accordion" id="accordionExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Player Registration
                </button>
            </h2>
            <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto">
                <form asp-action="PlayerRegistration">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="ReferralCode" class="form-control" placeholder="Refral Code" />
                        <label>Referral Code</label>
                        <span asp-validation-for="ReferralCode" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                        <label>First Name</label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                        <label>Last Name</label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="UserName" id="UserName" class="form-control" placeholder="UserName" />
                        <label>User Name</label>
                        <span id="lblUserName" asp-validation-for="UserName" class="text-danger"></span><br />
                        <span name="lblAvailbleUserName" id="lblAvailbleUserName"></span>

                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                        <label>Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3 hiding" style="display:none;">
                        <input asp-for="GameInterested" type="hidden" class="form-control" placeholder="GameInterested" />
                        <label>Game Interested</label>
                        <span asp-validation-for="GameInterested" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 col-sm-12">
                        <div class="form-floating mb-3">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Game interested </label>
                                </div>
                                <div class="col-md-6">
                                    @{
                                        foreach (var game in @ViewBag.GameList)
                                        {
                                            <p><input type="checkbox" class="gameCheckBox" value="@game.Id">&nbsp;&nbsp;  @game.GameName</p>
                                        }
                                    }
                                </div>
                            </div>

                        </div>
                        <input type="hidden" asp-for="GameInterested" id="GameInterested" />
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="DateOfBirth" class="form-control" placeholder="DateOfBirth" type="date" />
                        <label>Date of birth</label>
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save Player" class="btn btn-primary" />
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        var checkedList = "";
        $(".gameCheckBox").on("change", function () {
            debugger;
            if ($(this).is(":checked")) {
                if (checkedList == "") {
                    checkedList = $(this).val();
                }
                else {
                    checkedList += "," + $(this).val();
                }
            }
            else {
                var gameDT = $("#GameInterested").val();
                var romoveVal = $(this).val();
                var trainindIdArray = gameDT.split(',');
                var i;
                checkedList = "";
                for (i = 0; i < trainindIdArray.length; ++i) {
                    if (trainindIdArray[i] != romoveVal) {
                        if (checkedList == "") {
                            checkedList = trainindIdArray[i];
                        }
                        else {
                            checkedList += "," + trainindIdArray[i];
                        }
                    }
                }
            }
            $("#GameInterested").val(checkedList);
        });

        $("#UserName").keyup(function () {
            debugger;
            var userName = $(this).val();
            $.get("/home/CheckUserName", { userName: userName },
                function (data) {
                    debugger;
                    $("#lblUserName").text(data.message);
                    $("#lblAvailbleUserName").text(data.availbleUserName);
                });

        });

    </script>

}