@model List<GammingManagementSystem.Dtos.ApplicationUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = null;
    int i = 1;
}
<div class="row">
    <div class="col-md-6">
        <h1>Agent List</h1>
    </div>
    <div class="col-md-6">
        <button id="btnAdd" class="float-right" onclick="CreateAgent()"> Create Agent</button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table id="AgentTable" class="display" style="width:100%">
            <thead>
                <tr>
                    <th scope="col">Sr No.</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Registration</th>
                    <th scope="col">Profile Picture</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-active">
                        <td scope="row">@(i)<input type="hidden" class="id" value="@item.Id" /></td>
                        <td scope="row">@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.RegistrationDate</td>
                        <td>@*<img src="~/Uploads/@(item.ProfilePicture)" style="width:20px;" />*@ -</td>
                        <th scope="col">
                            <button id="btnEdit" class="btnEdit" onclick="EditAgent('@item.Id')">Edit</button>
                            <button id="btnDelete" class="btnDelete" onclick="DeleteAgent('@item.Id')">Delete</button>
                        </th>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>

