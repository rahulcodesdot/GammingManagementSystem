@model List<GammingManagementSystem.Models.Games>
@{
    ViewData["Title"] = "Index";
    Layout = null;
    int i = 1;
}
<div class="row">
    <div class="col-md-6">
        <h1>Game List</h1>
    </div>
    <div class="col-md-6">
        <button id="btnAdd" class="float-right" onclick="CreateGame()">Create Game</button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table id="GameTableList" class="display" style="width:100%">
            <thead>
                <tr>
                    <th scope="col">Sr No.</th>
                    <th scope="col">Game Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-active">
                        <td scope="row">@(i)</td>
                        <td scope="row">@item.GameName</td>
                        <th scope="col">
                            <button id="btnEdit" class="btnEdit" onclick="EditGame(@item.Id)">Edit</button>
                            <button id="btnDelete" class="btnDelete" onclick="DeleteGame(@item.Id)">Delete</button>
                        </th>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>

