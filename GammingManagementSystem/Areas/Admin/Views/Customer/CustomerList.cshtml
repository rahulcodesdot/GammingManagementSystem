@model List<GammingManagementSystem.Dtos.ApplicationUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = null;
    int i = 1;
}
<div class="row">
    <div class="col-md-6">
        <h1>Customer List</h1>
    </div>
    <div class="col-md-6">
        <button id="btnAdd" class="float-right" onclick="CreateCustomer()">Create Customer</button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table id="CustomerTable" class="display" style="width:100%">
            <thead>
                <tr>
                    <th scope="col">Sr No.</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Registration</th>
                    <th scope="col">Reffaral Code</th>
                    <th scope="col">Game Intrest In</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-active">
                        <td scope="row">@(i)<input type="hidden" class="id" value="@item.Id" /></td>
                        <td scope="row">@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.RegistrationDate</td>
                        <td>@item.ReferalCode</td>
                        <td>@item.GameInterested</td>
                        <th scope="col">
                            <button id="btnEdit" class="btnEdit" onclick="EditAgent('@item.Id')">Edit</button>
                            <button id="btnDelete" class="btnDelete" onclick="DeleteCustomer('@item.Id')">Delete</button>
                        </th>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>

