@model GammingManagementSystem.Models.ApplicationUser
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add/Edit Customer Details</h5>
            <button type="button" class="close" data-dismiss="modal" onclick="CloseModal()" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <fieldset>
                <legend>Personal Details</legend>
                <hr />
                <div class="form-group">
                    <label class="form-label">FirstName</label>
                    <input type="hidden" class="form-control" name="Id" id="Id" value="@(Model != null ? Model.Id : null)" />
                    <input class="form-control" name="FirstName" id="FirstName" value="@(Model != null ? Model.FirstName : null)" placeholder="First Name" />
                </div>
                <div class="form-group">
                    <label class="form-label">Last Name</label>
                    <input class="form-control" name="LastName" id="LastName" value="@(Model != null ? Model.LastName : null)" placeholder="First Name" />
                </div>
                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input class="form-control" name="Email" id="Email" placeholder="Email" value="@(Model != null ? Model.Email : null)" />
                </div>
                <div class="form-group">
                    <label class="form-label">Phone Number</label>
                    <input class="form-control" name="PhoneNumber" id="PhoneNumber" placeholder="Phone Number" value="@(Model != null ? Model.PhoneNumber : null)" />
                </div>
                <br />
                <legend>Address :</legend>
                <hr />
                <div class="form-group">
                    <label class="form-label">Address1</label>
                    <input class="form-control" name="Address1" id="Address1" placeholder="Address1" value="@(Model != null ? Model.Address1 : null)" />
                </div>
                <div class="form-group">
                    <label class="form-label">City</label>
                    <input class="form-control" name="City" id="City" placeholder="City" value="@(Model != null ? Model.City : null)" />
                </div>
                <div class="form-group">
                    <label class="form-label">State</label>
                    <input class="form-control" name="State" id="State" placeholder="State" value="@(Model != null ? Model.State : null)" />
                </div>
                <div class="form-group">
                    <label class="form-label">ZipCode</label>
                    <input class="form-control" name="ZipCode" id="ZipCode" placeholder="ZipCode" value="@(Model != null ? Model.ZipCode : null)" />
                </div>
            </fieldset>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" onclick="CloseModal()" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" id="btnSave" onclick="AddCustomer()">Add Customer</button>
            <button type="button" class="btn btn-primary" id="btnUpdate" onclick="UpdateCustomer()">Update Customer</button>
        </div>
    </div>
</div>
